{% import _self as macros %}

{% set scope = {
    phone: '+7 (900) 900-90-90',
    email: 'info@gmail.com',
    address: 'г. Владивосток<br>ул. Выселковая 49, стр. 3',
} %}

{% macro content(scope) %}
    <ul class="Contacts">
        <li class="Contacts__listItem">
            <a class="Contacts__item" href="tel:{{ scope.phone|raw }}">
                <img
                    class="Contacts__icon"
                    src="{{ 'icons/phoneWhite.svg'|asset }}"
                    alt=""
                >
                <div class="Contacts__text">
                    {{ scope.phone|raw }}
                </div>
            </a>
        </li>
        <li class="Contacts__listItem">
            <a class="Contacts__item" href="email:{{ scope.email|raw }}">
                <img
                    class="Contacts__icon"
                    src="{{ 'icons/emailWhite.svg'|asset }}"
                    alt=""
                >
                <div class="Contacts__text">
                    {{ scope.email|raw }}
                </div>
            </a>
        </li>
        <li class="Contacts__listItem">
            <div class="Contacts__item">
                <img
                    class="Contacts__icon"
                    src="{{ 'icons/locationMarkSmallWhite.svg'|asset }}"
                    alt=""
                >
                <div class="Contacts__text">
                    {{ scope.address|raw }}
                </div>
            </div>
        </li>
    </ul>
{% endmacro %}

{{ macros.content(scope) }}